{
  "name": "auto-syrup",
  "version": "1.3.4",
  "description": "오토시럽 - 자동 시럽조제기 연결 관리자",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never",
    "build-installer": "electron-builder --win --x64 --config.compression=maximum --config.forceCodeSigning=false --config.win.signAndEditExecutable=false",
    "build-portable": "electron-builder --win --x64 --config.compression=maximum --config.win.target=portable",
    "build-nsis": "electron-builder --win --x64 --config.compression=maximum --config.forceCodeSigning=false --config.win.signAndEditExecutable=false --config.win.target=nsis",
    "build-all": "npm run build && npm run build-nsis",
    "release": "node create-release.js",
    "reset": "node reset-local-data.js",
    "check-token": "node check-token-simple.js",
    "find-token": "node find-token.js"
  },
  "keywords": [
    "arduino",
    "connector",
    "syrup",
    "dispenser"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "electron-packager": "^17.1.2"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "electron-updater": "^6.1.4",
    "iconv-lite": "^0.6.3",
    "keytar": "^7.9.0",
    "moment": "^2.29.4",
    "node-cron": "^3.0.3",
    "uuid": "^9.0.1"
  },
  "build": {
    "appId": "kr.pharmcoder.prescription",
    "productName": "오토시럽",
    "directories": {
      "output": "release",
      "buildResources": "assets"
    },
    "publish": {
      "provider": "github",
      "owner": "pharmcoder-kr",
      "repo": "prescription"
    },
    "extraResources": [
      {
        "from": "assets",
        "to": "assets",
        "filter": ["**/*"]
      }
    ],
    "icon": "assets/icon.ico",
    "files": [
      "main.js",
      "renderer.js",
      "index.html",
      "enroll.html",
      "preload.js",
      "styles.css",
      "gui-editor.js",
      "layout-editor.js",
      "package.json",
      "connections.json",
      "auto_dispensing_settings.json",
      "medicine_transmission_status.json",
      "transmission_status.json",
      "prescription_path.txt",
      "assets/**",
      "node_modules/axios/**/*",
      "node_modules/electron-updater/**/*",
      "node_modules/iconv-lite/**/*",
      "node_modules/moment/**/*",
      "node_modules/node-cron/**/*",
      "node_modules/uuid/**/*",
      "node_modules/keytar/**/*",
      "!node_modules/**/*.md",
      "!node_modules/**/*.txt",
      "!node_modules/**/*.map",
      "!node_modules/**/*.d.ts",
      "!node_modules/**/test/**/*",
      "!node_modules/**/tests/**/*",
      "!node_modules/**/example/**/*",
      "!node_modules/**/examples/**/*",
      "!node_modules/**/docs/**/*",
      "!node_modules/**/doc/**/*"
    ],
    "asar": true,
    "compression": "maximum",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "signAndEditExecutable": true,
      "icon": "assets/icon.ico",
      "requestedExecutionLevel": "asInvoker",
      "artifactName": "auto-syrup-setup-${version}.${ext}",
      "publisherName": "PharmCoder",
      "verifyUpdateCodeSignature": false,
      "executableName": "오토시럽"
    },
    "nsis": {
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "differentialPackage": true,
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "shortcutName": "오토시럽",
      "runAfterFinish": false,
      "menuCategory": false,
      "include": "build/installer.nsh"
    },
    "forceCodeSigning": false,
    "cscLink": null,
    "cscKeyPassword": null,
    "electronDownload": {
      "cache": "./electron-cache"
    }
  }
}
